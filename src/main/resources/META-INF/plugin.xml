<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.paulpanther.intellijactiondetection</id>
    <name>Action Detector</name>
    <vendor>paulpanther</vendor>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService
                serviceImplementation="com.paulpanther.actiondetector.ActionService"/>
        <toolWindow
                factoryClass="com.paulpanther.actiondetector.ActionToolWindowFactory"
                id="Detected Actions"
                anchor="right"/>
    </extensions>

    <applicationListeners>
    </applicationListeners>
    <actions>
        <action id="com.paulpanther.actiondetector.CreateSnapshotAction"
                class="com.paulpanther.actiondetector.CreateSnapshotAction" text="Show Refactoring">
            <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt R"/>
        </action>
    </actions>
</idea-plugin>
